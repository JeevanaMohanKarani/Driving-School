<section class="py-20 bg-gray-100 text-center">
  <h2 class="text-3xl font-bold text-blue-700 mb-8">All Student Reviews</h2>
  <div class="max-w-3xl mx-auto space-y-6 text-left px-4">
    <% if (comments.length === 0) { %>
      <p class="text-gray-600 text-center">No reviews yet.</p>
    <% } else { %>
      <% comments.slice().reverse().forEach(c => { %>
        <div class="bg-white p-6 rounded-lg shadow">
          <p class="font-semibold text-lg mb-1"><%= c.name %> <span class="text-yellow-500"> <%= 'â­'.repeat(c.rating) %></span></p>
          <p class="text-gray-700 mb-2"><%= c.comment %></p>
        </div>
      <% }) %>
    <% } %>
  </div>

  <a href="/#reviews" class="inline-block mt-10 text-blue-600 hover:underline">Back to Reviews Form</a>
</section>
